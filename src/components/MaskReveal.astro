---
const {
  src = "/images/hero.jpg",
  alt = "",
  label = "2025: PZ | NOVA",
} = Astro.props;
---

<div class="mask-wrap" aria-label={alt}>
  <!-- gradient blob behind -->
  <div class="mask-media-blur" aria-hidden="true"></div>
    <!-- main img front -->
    <div class="mask-media">
      <img src={src} alt={alt} loading="lazy" />
    </div>

  <div class="mask-tag">{label}</div>
</div>

<style>
  .mask-wrap{
    position: relative;
    width: min(760px, 100%);
    margin: auto;
    padding: 32px 0;
    z-index: 2;
  }

  .mask-media-blur{
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;

    width: 120%;
    aspect-ratio: 16 / 7;

    background: linear-gradient(180deg, #F4A3B4 0%, #A3B8CA 100%);

    filter: blur(26px);
    opacity: 0.80;

    transform-origin: right;
    transform: scale(1.2);

    -webkit-mask-image: url("/mask/blob-mask-blur.png");
    mask-image: url("/mask/blob-mask-blur.png");
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
    -webkit-mask-size: contain;
    mask-size: contain;
  }

  .mask-media{
    width: 80%;
    aspect-ratio: 16 / 7;
    overflow: visible;
    position: relative;

    -webkit-mask-image: url("/mask/blob-mask.png");
    mask-image: url("/mask/blob-mask.png");
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
    -webkit-mask-size: contain;
    mask-size: contain;
  }

  .mask-media img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display:block;
    filter: contrast(1.05) saturate(0.98);
    z-index: 2;
  }

  .mask-tag{
    position:absolute;
    z-index: 1;
    left: 50%;
    top: 55%;
    transform: translate(0, -400%);
    font-size: 11px;
    font-weight: 900;
    letter-spacing: .02em;
    text-transform: uppercase;
    border: 2px solid #A3B8CA;
    padding: 6px 10px;
  }
</style>
